

<section class="content-header">
  <h1><%= @machine.name %></h1>
  <%= link_to 'Add sensor', new_sensor_path(machine_id: @machine.id) %>
  <%= link_to 'Edit', edit_machine_path(@machine) %> |
  <%= link_to 'Back', machines_path %>
</section>

<!-- Main content -->
<section class="content">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Sensors</h3>
        </div>
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @machine.sensors.each do |sensor| %>
              <tr>
                <td><%= sensor.name %></td>
                <td><%= link_to 'Show', sensor %></td>
                <td><%= link_to 'Edit', edit_sensor_path(sensor) %></td>
                <td><%= link_to 'Destroy', sensor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <br>
        </div>
      </div>
    </div>
  </div>
</section>